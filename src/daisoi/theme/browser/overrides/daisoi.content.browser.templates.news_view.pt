<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="daisoi.theme">
<body>
<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
          tal:define="toc context/table_of_contents|nothing;">

<div id="site-content" class="site-content clearfix news-site-content">
  <div id="inner-content" class="inner-content-wrap">
    <article class="hentry data-effect">
      <div class="post-media data-effect-item has-effect-icon offset-v-25 offset-h-24 clerafix" style="min-height:90px;">
        <div class="post-calendar">                  
          <span class="inner">
            <span class="entry-calendar">
              <span class="day">${python: view.context.effective().day()}</span>
              <span class="month">${python: view.context.effective().Mon()}</span>
            </span>
          </span>               
        </div>
      </div><!-- /.post-media -->
      <div tal:condition="view/context/image" class="post-media data-effect-item has-effect-icon offset-v-25 offset-h-24 clerafix" style="min-height:90px;">
        <a href="${view/context/absolute_url}"><img src="${view/context/absolute_url}/@@images/image" alt="Image"></a>
      </div><!-- /.post-media -->

      <div class="post-content-wrap clearfix">
        <h2 class="post-title">
          <span class="post-title-inner">
            <a href="${view/context/absolute_url}">${view/context/title}</a>
          </span>
        </h2><!-- /.post-title -->
        <div class="post-meta">
          <div class="post-meta-content">
            <div class="post-meta-content-inner">
              <span class="post-date item"><span class="inner"><span class="entry-date">
                            ${python: view.context.effective().strftime('%b %d, %Y')}
              </span></span></span>
              <span class="post-by-author item"><span class="inner">By: ${view/context/Creator}</span></span>
            </div>
          </div>
        </div><!-- /.post-meta -->
        <div class="post-content post-excerpt margin-bottom-43">
          <p class="line-height-27 letter-spacing-005" tal:condition="view/context/text" tal:content="structure view/context/text/raw"></p>
        </div><!-- /.post-excerpt -->
        <div class="post-tags-socials">
          <div class="post-tags" tal:condition="view/context/Subject">
            <span>Tags :</span>
            <tal:repeat tal:repeat="sub view/context/Subject">
              <a href="${python: view.getNewsSubject()[sub]['getURL']}">${sub}</a>
            </tal:repeat>
          </div>
          <div class="post-socials ">
            <div class="fb-like" data-href="${view/context/absolute_url}" data-layout="button" data-action="like" data-size="small" data-show-faces="true" data-share="false"></div>
          </div>
        </div>
        
      </div><!-- /.post-content-wrap -->
    </article><!-- /.hentry -->            

  </div><!-- /#inner-content -->
</div><!-- /#site-content -->

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = 'https://connect.facebook.net/zh_TW/sdk.js#xfbml=1&version=v3.1';
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

</metal:content-core>
</metal:content-core>

</body>
</html>



